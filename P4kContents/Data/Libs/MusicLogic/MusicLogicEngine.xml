    <Event name="CloakModeEnter" changeplayer="-150" changeallowchange="200" />
    <Event name="CloakModeLeave" changeplayer="150" changeallowchange="200" />
    <Event name="EnemySpotted" changeplayer="50" changeallowchange="100" />
